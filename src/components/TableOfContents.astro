---
// SidebarNav.astro - Collapsible sidebar navigation with smooth scroll
---

<div class="sidebar-panel" id="sidebar-panel">
  <button class="sidebar-toggle" id="sidebar-toggle" aria-label="Toggle navigation panel">
    <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
      <path d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"/>
    </svg>
  </button>

  <nav class="sidebar-nav-content">
    <button class="sidebar-nav-link" data-target="60-second-summary-tldr">
      Summary
    </button>
    <button class="sidebar-nav-link" data-target="appendix">
      Appendix
    </button>
  </nav>
</div>

<script>
  const sidebarPanel = document.getElementById('sidebar-panel');
  const sidebarToggle = document.getElementById('sidebar-toggle');
  const navLinks = document.querySelectorAll('.sidebar-nav-link');

  // Toggle sidebar visibility
  sidebarToggle?.addEventListener('click', () => {
    sidebarPanel?.classList.toggle('open');
  });

  // Smooth scroll to section and close panel on mobile
  navLinks.forEach(link => {
    link.addEventListener('click', () => {
      const targetId = link.getAttribute('data-target');
      const targetElement = document.getElementById(targetId);

      if (targetElement) {
        // Scroll to top of section
        targetElement.scrollIntoView({ behavior: 'smooth', block: 'start' });

        // Close panel on mobile/tablet
        if (window.innerWidth < 1024) {
          sidebarPanel?.classList.remove('open');
        }
      }
    });
  });

  // Close panel when clicking outside (mobile)
  document.addEventListener('click', (e) => {
    const isClickInsidePanel = sidebarPanel?.contains(e.target);
    if (!isClickInsidePanel && window.innerWidth < 1024) {
      sidebarPanel?.classList.remove('open');
    }
  });
</script>

<style>
  .sidebar-panel {
    position: fixed;
    right: 0;
    top: 0;
    height: 100vh;
    z-index: 40;
    display: flex;
    align-items: flex-start;
    padding-top: 6rem;
  }

  .sidebar-toggle {
    position: absolute;
    right: 100%;
    top: 50%;
    transform: translateY(-50%);
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-right: none;
    border-radius: 8px 0 0 8px;
    color: var(--color-text);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .sidebar-toggle:hover {
    background-color: var(--color-accent);
    color: white;
  }

  .sidebar-nav-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-right: none;
    border-radius: 8px 0 0 8px;
    padding: 1.5rem 1rem;
    box-shadow: -4px 4px 12px rgba(0, 0, 0, 0.1);
    width: 140px;
    margin-right: -140px;
    transition: margin-right 0.3s ease;
  }

  .sidebar-panel.open .sidebar-nav-content {
    margin-right: 0;
  }

  .sidebar-nav-link {
    padding: 0.75rem 1rem;
    color: var(--color-text);
    background-color: transparent;
    border: 1px solid transparent;
    font-size: 0.9rem;
    font-weight: 500;
    text-align: center;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .sidebar-nav-link:hover {
    color: var(--color-accent);
    background-color: var(--color-bg-tertiary);
    border-color: var(--color-accent);
  }

  /* Desktop: always show panel, hide toggle button */
  @media (min-width: 1024px) {
    .sidebar-toggle {
      display: none;
    }

    .sidebar-nav-content {
      margin-right: 0;
    }

    .sidebar-panel {
      padding-top: 8rem;
    }
  }

  /* Mobile: hide panel by default */
  @media (max-width: 1023px) {
    .sidebar-panel {
      padding-top: 50vh;
    }
  }
</style>
