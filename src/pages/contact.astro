---
// src/pages/contact.astro - Contact page
import BaseLayout from '../layouts/BaseLayout.astro';

const baseUrl = import.meta.env.BASE_URL;
const heroImage = `url('${baseUrl}images/contact-hero.png')`;
---

<BaseLayout
  title="Contact Jake Maisel - Let's Connect"
  description="Get in touch to discuss your next product design project. Connect via email, LinkedIn, or download my resume to learn more.">
  <section class="contact-header" style={`--hero-image: ${heroImage}`}>
    <div class="contact-header-content">
      <h1>Let's Connect</h1>
      <p class="intro">
        I'm always interested in discussing new projects, design challenges, and opportunities to work together.
      </p>
    </div>
  </section>

  <section class="contact-page">
    <div class="container">

      <div class="contact-info">
        <div class="info-card email-card">
          <div class="info-header">
            <h3>Email</h3>
            <span class="timezone-badge">US Eastern Time</span>
          </div>
          <p class="contact-email">
            <a href="mailto:jake@maiseldesigns.com">jake@maiseldesigns.com</a>
          </p>
          <p class="contact-description">
            The best way to reach me. I typically reply within 24 hours.
          </p>
        </div>
      </div>

      <div class="contact-methods">
        <a href="https://www.linkedin.com/in/jake-maisel-33970197/" target="_blank" rel="noopener noreferrer" class="contact-item">
          <div class="contact-item-header">
            <h3>LinkedIn</h3>
          </div>
          <p class="contact-title">Jake Maisel</p>
          <p class="contact-description">
            Connect with me to stay updated on my latest work and insights.
          </p>
        </a>

        <a href="/resume.pdf" target="_blank" rel="noopener noreferrer" class="contact-item">
          <div class="contact-item-header">
            <h3>Resume</h3>
          </div>
          <p class="contact-title">Download PDF</p>
          <p class="contact-description">
            Full background, experience, and professional history.
          </p>
        </a>
      </div>

      <div class="cta-section">
        <h2>Let's Discuss Your Next Project</h2>
        <p>
          Whether you have a specific challenge in mind or want to explore how strategic design can solve your problems, I'm ready to have that conversation.
        </p>
        <a href="mailto:jake@maiseldesigns.com?subject=Let%27s%20work%20together" class="cta-button">Start the Conversation</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-header {
    background: linear-gradient(135deg, var(--gradient-start) 0%, var(--gradient-end) 100%),
                var(--hero-image) center / cover no-repeat;
    color: white;
    padding: 4.5rem 2rem;
  }

  .contact-header-content {
    max-width: 1280px;
    margin: 0 auto;
  }

  .contact-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 0.75rem 0;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .contact-header .intro {
    font-size: 1.1rem;
    opacity: 0.95;
    margin: 0;
    max-width: 600px;
    line-height: 1.6;
  }

  .contact-page {
    padding: 3rem 2rem 4rem;
  }

  .container {
    max-width: 720px;
    margin: 0 auto;
  }

  .contact-info {
    margin-bottom: 3rem;
  }

  .info-card {
    padding: 2rem;
    background: linear-gradient(135deg, var(--gradient-start) 0%, var(--gradient-end) 100%);
    color: white;
    border-radius: 8px;
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.15);
  }

  .info-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .info-header h3 {
    font-size: 1.3rem;
    margin: 0;
    font-weight: 600;
  }

  .timezone-badge {
    font-size: 0.8rem;
    background-color: rgba(255, 255, 255, 0.2);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-weight: 500;
  }

  .contact-email {
    margin: 1rem 0;
  }

  .contact-email a {
    color: white;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    transition: text-decoration 0.2s ease;
  }

  .contact-email a:hover {
    text-decoration: underline;
  }

  .contact-methods {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .contact-item {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 2rem;
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
  }

  .contact-item:hover {
    border-color: var(--color-accent);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.1);
    transform: translateY(-2px);
  }

  [data-theme='dark'] .contact-item:hover {
    box-shadow: 0 4px 12px rgba(77, 159, 255, 0.15);
  }

  .contact-item-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .contact-item h3 {
    font-size: 1.1rem;
    margin: 0;
    color: var(--color-text);
    font-weight: 600;
  }

  .contact-icon {
    flex-shrink: 0;
    color: var(--color-accent);
    transition: color 0.3s ease, transform 0.3s ease;
  }

  .contact-item:hover .contact-icon {
    color: var(--color-accent-dark);
    transform: translateX(2px);
  }

  .contact-title {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--color-text);
    margin: 0;
  }

  .contact-item p {
    margin: 0;
    line-height: 1.6;
  }

  .contact-description {
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .email-card .contact-description {
    color: rgba(255, 255, 255, 0.9);
  }

  @media (max-width: 768px) {
    .contact-methods {
      grid-template-columns: 1fr;
    }
  }

  .cta-section {
    background-color: var(--color-accent-light);
    padding: 3rem 2rem;
    border-radius: 8px;
    text-align: center;
  }

  .cta-section h2 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .cta-section p {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  .cta-button {
    display: inline-block;
    padding: 0.75rem 2rem;
    background-color: var(--color-accent);
    color: white;
    text-decoration: none;
    border-radius: 9999px;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }

  .cta-button:hover {
    background-color: var(--color-accent-dark);
  }
</style>
