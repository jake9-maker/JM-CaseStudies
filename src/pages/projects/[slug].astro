---
// src/pages/projects/[slug].astro - Dynamic project page
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactCTA from '../../components/ContactCTA.astro';

// Get all projects for static path generation
export async function getStaticPaths() {
  const projectEntries = await getCollection('projects');

  return projectEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Get all projects sorted by featured_order to find next project
const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort((a, b) => a.data.featured_order - b.data.featured_order);
const currentIndex = sortedProjects.findIndex(p => p.slug === entry.slug);
const nextProject = currentIndex < sortedProjects.length - 1 ? sortedProjects[currentIndex + 1] : null;

const baseUrl = import.meta.env.BASE_URL;
---

<BaseLayout title={`${entry.data.title} - JM Case Studies`}>
  <article class="project-page">
    <div class="container">
      {entry.data.featured_image && (
        <img
          src={entry.data.featured_image}
          alt={entry.data.title}
          class="project-hero"
        />
      )}

      <header class="project-header">
        <h1>{entry.data.title}</h1>
        <p class="project-summary">{entry.data.summary}</p>
      </header>

      {(entry.data.role || entry.data.duration || entry.data.pillars?.length > 0) && (
        <section class="project-meta">
          {entry.data.role && (
            <div class="meta-item">
              <strong>Role:</strong>
              <span>{entry.data.role}</span>
            </div>
          )}
          {entry.data.duration && (
            <div class="meta-item">
              <strong>Duration:</strong>
              <span>{entry.data.duration}</span>
            </div>
          )}
          {entry.data.pillars?.length > 0 && (
            <div class="meta-item">
              <strong>Focus:</strong>
              <div class="pillars">
                {entry.data.pillars.map((pillar) => (
                  <span class="pillar-tag">{pillar}</span>
                ))}
              </div>
            </div>
          )}
        </section>
      )}

      <div class="project-content">
        <Content />
      </div>

      <nav class="content-nav" aria-label="Continue reading">
        <a href={`${baseUrl}projects/`} class="content-nav-link back-link">
          <span class="content-nav-label">‚Üê Back</span>
          <div class="content-nav-content">
            <span class="content-nav-title">To Projects</span>
          </div>
        </a>
        {nextProject && (
          <a href={`${baseUrl}projects/${nextProject.slug}/`} class="content-nav-link next-link">
            <span class="content-nav-label">Next up</span>
            <div class="content-nav-content">
              {nextProject.data.featured_image && (
                <div class="content-nav-thumbnail">
                  <img
                    src={nextProject.data.featured_image}
                    alt={nextProject.data.title}
                    loading="lazy"
                  />
                </div>
              )}
              <span class="content-nav-title">{nextProject.data.title}</span>
              <svg class="content-nav-arrow" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path d="M7.5 5L12.5 10L7.5 15" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
              </svg>
            </div>
          </a>
        )}
      </nav>
    </div>
  </article>

  <ContactCTA />
</BaseLayout>

<style>
  .project-page {
    padding: 4rem 2rem;
  }

  .container {
    max-width: 720px;
    margin: 0 auto;
    width: 100%;
  }

  .project-hero {
    max-width: 720px;
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 8px;
    margin: 0 auto 2.5rem;
    display: block;
  }

  .project-header {
    margin-bottom: 3rem;
    border-bottom: 2px solid #eee;
    padding-bottom: 2rem;
  }

  .project-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .project-summary {
    font-size: 1.2rem;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }

  .project-meta {
    background-color: #f9f9f9;
    padding: 2rem;
    border-radius: 8px;
    margin-bottom: 3rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .meta-item {
    display: flex;
    flex-direction: column;
  }

  .meta-item strong {
    color: #333;
    margin-bottom: 0.5rem;
  }

  .meta-item span {
    color: #666;
  }

  .pillars {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .pillar-tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: #e0e0e0;
    border-radius: 6px;
    font-size: 0.85rem;
    color: #555;
  }

  /* ================================
     Case Study Typography (Final)
     ================================ */

  .project-content {
    max-width: 720px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 1.25rem;
    padding-right: 1.25rem;
    font-size: 18px;
    line-height: 1.7;
    color: rgba(0, 0, 0, 0.82);
  }

  /* Paragraphs */
  .project-content :global(p) {
    margin: 0.9rem 0;
  }

  /* Headings */
  .project-content :global(h2) {
    font-size: 1.35rem;
    line-height: 1.25;
    margin: 2.25rem 0 0.75rem;
    letter-spacing: -0.02em;
  }

  .project-content :global(h3) {
    font-size: 1.1rem;
    line-height: 1.35;
    margin: 1.6rem 0 0.5rem;
    letter-spacing: -0.02em;
  }

  /* Horizontal rules */
  .project-content :global(hr) {
    margin: 2.25rem 0;
    opacity: 0.25;
  }

  /* Bullet lists */
  .project-content :global(ul),
  .project-content :global(ol) {
    margin: 0.75rem 0 1.25rem;
    padding-left: 1.25rem;
  }

  .project-content :global(li) {
    margin: 0.6rem 0;
    line-height: 1.7;
  }

  .project-content :global(li p) {
    margin: 0.4rem 0;
  }

  /* Bullet label emphasis (works whether strong is inside p or not) */
  .project-content :global(li strong),
  .project-content :global(li b) {
    font-weight: 700;
    color: rgba(0, 0, 0, 0.95);
  }

  /* Micro spacing after bullet labels */
  .project-content :global(li strong::after),
  .project-content :global(li b::after) {
    content: "";
    margin-right: 0.15rem;
  }

  /* Inline case study images */
  .project-content :global(img) {
    max-width: 100%;
    height: auto;
    margin: 2rem 0;
    border-radius: 8px;
    display: block;
  }

  /* Keep general strong everywhere else slightly lighter */
  .project-content :global(strong),
  .project-content :global(b) {
    font-weight: 600;
    font-size: inherit;
    line-height: inherit;
  }

  /* Project Navigation */
  .content-nav {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .content-nav-link {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1.5rem;
    background-color: #ffffff;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
  }

  .content-nav-link:hover {
    border-color: var(--color-accent);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.1);
    transform: translateY(-2px);
  }

  .content-nav-label {
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--color-text-muted);
  }

  .content-nav-content {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .content-nav-thumbnail {
    width: 48px;
    height: 48px;
    flex-shrink: 0;
    border-radius: 4px;
    overflow: hidden;
    background-color: var(--color-bg-secondary);
  }

  .content-nav-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .content-nav-title {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--color-text);
    line-height: 1.5;
  }

  .content-nav-arrow {
    margin-left: auto;
    color: var(--color-text-muted);
    transition: color 0.3s ease, transform 0.3s ease;
    flex-shrink: 0;
  }

  .content-nav-link:hover .content-nav-arrow {
    color: var(--color-accent);
    transform: translateX(2px);
  }

  .back-link {
    grid-column: 1;
  }

  .next-link {
    grid-column: 2;
  }

  @media (max-width: 768px) {
    .content-nav {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .back-link,
    .next-link {
      grid-column: 1;
    }

    .content-nav-thumbnail {
      width: 40px;
      height: 40px;
    }

    .content-nav-title {
      font-size: 0.9rem;
    }
  }
</style>
