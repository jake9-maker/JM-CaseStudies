---
// src/pages/projects/[slug].astro - Dynamic project page
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactCTA from '../../components/ContactCTA.astro';

// Get all projects for static path generation
export async function getStaticPaths() {
  const projectEntries = await getCollection('projects');

  return projectEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout title={`${entry.data.title} - JM Case Studies`}>
  <article class="project-page">
    <div class="container">
      {entry.data.featured_image && (
        <img
          src={entry.data.featured_image}
          alt={entry.data.title}
          class="project-hero"
        />
      )}

      <header class="project-header">
        <h1>{entry.data.title}</h1>
        <p class="project-summary">{entry.data.summary}</p>
      </header>

      {(entry.data.role || entry.data.duration || entry.data.pillars?.length > 0) && (
        <section class="project-meta">
          {entry.data.role && (
            <div class="meta-item">
              <strong>Role:</strong>
              <span>{entry.data.role}</span>
            </div>
          )}
          {entry.data.duration && (
            <div class="meta-item">
              <strong>Duration:</strong>
              <span>{entry.data.duration}</span>
            </div>
          )}
          {entry.data.pillars?.length > 0 && (
            <div class="meta-item">
              <strong>Focus:</strong>
              <div class="pillars">
                {entry.data.pillars.map((pillar) => (
                  <span class="pillar-tag">{pillar}</span>
                ))}
              </div>
            </div>
          )}
        </section>
      )}

      <div class="project-content">
        <Content />
      </div>
    </div>
  </article>

  <ContactCTA />
</BaseLayout>

<style>
  .project-page {
    padding: 4rem 2rem;
  }

  .container {
    max-width: 720px;
    margin: 0 auto;
    width: 100%;
  }

  .project-hero {
    max-width: 720px;
    width: 100%;
    height: auto;
    object-fit: cover;
    border-radius: 8px;
    margin: 0 auto 2.5rem;
    display: block;
  }

  .project-header {
    margin-bottom: 3rem;
    border-bottom: 2px solid #eee;
    padding-bottom: 2rem;
  }

  .project-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .project-summary {
    font-size: 1.2rem;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }

  .project-meta {
    background-color: #f9f9f9;
    padding: 2rem;
    border-radius: 8px;
    margin-bottom: 3rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .meta-item {
    display: flex;
    flex-direction: column;
  }

  .meta-item strong {
    color: #333;
    margin-bottom: 0.5rem;
  }

  .meta-item span {
    color: #666;
  }

  .pillars {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .pillar-tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: #e0e0e0;
    border-radius: 4px;
    font-size: 0.85rem;
    color: #555;
  }

  /* ================================
     Case Study Typography (Final)
     ================================ */

  .project-content {
    max-width: 720px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 1.25rem;
    padding-right: 1.25rem;
    font-size: 18px;
    line-height: 1.7;
    color: rgba(0, 0, 0, 0.82);
  }

  /* Paragraphs */
  .project-content :global(p) {
    margin: 0.9rem 0;
  }

  /* Headings */
  .project-content :global(h2) {
    font-size: 1.35rem;
    line-height: 1.25;
    margin: 2.25rem 0 0.75rem;
    letter-spacing: -0.02em;
  }

  .project-content :global(h3) {
    font-size: 1.1rem;
    line-height: 1.35;
    margin: 1.6rem 0 0.5rem;
    letter-spacing: -0.02em;
  }

  /* Horizontal rules */
  .project-content :global(hr) {
    margin: 2.25rem 0;
    opacity: 0.25;
  }

  /* Bullet lists */
  .project-content :global(ul),
  .project-content :global(ol) {
    margin: 0.75rem 0 1.25rem;
    padding-left: 1.25rem;
  }

  .project-content :global(li) {
    margin: 0.6rem 0;
    line-height: 1.7;
  }

  .project-content :global(li p) {
    margin: 0.4rem 0;
  }

  /* Bullet label emphasis (works whether strong is inside p or not) */
  .project-content :global(li strong),
  .project-content :global(li b) {
    font-weight: 700;
    color: rgba(0, 0, 0, 0.95);
  }

  /* Micro spacing after bullet labels */
  .project-content :global(li strong::after),
  .project-content :global(li b::after) {
    content: "";
    margin-right: 0.15rem;
  }

  /* Keep general strong everywhere else slightly lighter */
  .project-content :global(strong),
  .project-content :global(b) {
    font-weight: 600;
    font-size: inherit;
    line-height: inherit;
  }
</style>
