---
// src/pages/projects/index.astro - Projects listing page
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactCTA from '../../components/ContactCTA.astro';
import ProjectFilter from '../../components/ProjectFilter.astro';

const baseUrl = import.meta.env.BASE_URL;

// Get all projects from content collection
const projects = await getCollection('projects');
---

<BaseLayout
  title="UX Case Studies - Jake Maisel Product Design Work"
  description="Explore detailed case studies showcasing UX research, product strategy, and design leadership. Featured work in automotive marketplace innovation, mobile design, and complex problem solving.">
  <section class="projects-section">
    <div class="container">
      <h1>Case Studies</h1>
      <p class="intro">
        Detailed exploration of my recent design work, approaches, and outcomes
      </p>

      {projects.length > 0 && <ProjectFilter projects={projects} />}

      {
        projects.length > 0 ? (
          <div class="projects-grid">
            {projects.map((project) => (
              <a href={`${baseUrl}projects/${project.slug}/`} class="project-card" data-pillars={project.data.pillars?.join(',')}>
                {project.data.featured_image && (
                  <div class="project-image-wrapper">
                    <img
                      src={project.data.featured_image}
                      alt={project.data.title}
                      class="project-image"
                    />
                  </div>
                )}
                <div class="project-card-content">
                  <h3>{project.data.title}</h3>
                  <p class="summary">{project.data.summary}</p>
                  {project.data.pillars && project.data.pillars.length > 0 && (
                    <div class="pillars">
                      {project.data.pillars.slice(0, 4).map((pillar) => (
                        <span class="pillar-tag">{pillar.replace(/-/g, ' ')}</span>
                      ))}
                    </div>
                  )}
                  <div class="card-footer">
                    <span class="read-more">Read Case Study â†’</span>
                  </div>
                </div>
              </a>
            ))}
          </div>
        ) : (
          <div class="no-projects">
            <p>Projects coming soon...</p>
          </div>
        )
      }
    </div>
  </section>

  <ContactCTA />
</BaseLayout>

<style>
  .projects-section {
    padding: 4rem 2rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .intro {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    margin-bottom: 3rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .project-card {
    display: flex;
    flex-direction: column;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    background-color: var(--color-bg-secondary);
    transition: all 0.3s ease;
  }

  .project-card:hover {
    border-color: var(--color-accent);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.1);
    transform: translateY(-2px);
  }

  .project-image-wrapper {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background-color: var(--color-bg-tertiary);
  }

  .project-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-card-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    flex-grow: 1;
  }

  .project-card-content h3 {
    font-size: 1.1rem;
    margin: 0;
    color: var(--color-text);
    font-weight: 600;
    line-height: 1.4;
  }

  .summary {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.5;
    flex-grow: 1;
  }

  .pillars {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.25rem;
  }

  .pillar-tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: var(--color-bg-tertiary);
    border-radius: 6px;
    font-size: 0.8rem;
    color: var(--color-text-muted);
    text-transform: capitalize;
  }

  .card-footer {
    margin-top: auto;
    padding-top: 0.5rem;
  }

  .read-more {
    font-size: 0.9rem;
    color: var(--color-accent);
    font-weight: 500;
    transition: transform 0.3s ease;
  }

  .project-card:hover .read-more {
    transform: translateX(2px);
  }

  @media (max-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }

  .no-projects {
    text-align: center;
    padding: 3rem;
    color: var(--color-text-subtle);
  }
</style>
