---
// src/pages/projects/index.astro - Projects listing page
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactCTA from '../../components/ContactCTA.astro';

const baseUrl = import.meta.env.BASE_URL;

// Get all projects from content collection
const projects = await getCollection('projects');
---

<BaseLayout title="Projects - JM Case Studies">
  <section class="projects-section">
    <div class="container">
      <h1>Case Studies</h1>
      <p class="intro">
        Detailed exploration of my recent design work, approaches, and outcomes
      </p>

      {
        projects.length > 0 ? (
          <div class="projects-grid">
            {projects.map((project) => (
              <div class="project-card">
                {project.data.featured_image && (
                  <img
                    src={project.data.featured_image}
                    alt={project.data.title}
                    class="project-image"
                  />
                )}
                <div class="project-card-content">
                  <h3>
                    <a href={`${baseUrl}projects/${project.slug}/`}>{project.data.title}</a>
                  </h3>
                  <p class="summary">{project.data.summary}</p>
                  {project.data.pillars && (
                    <div class="pillars">
                      {project.data.pillars.map((pillar) => (
                        <span class="pillar-tag">{pillar}</span>
                      ))}
                    </div>
                  )}
                  <a href={`${baseUrl}projects/${project.slug}/`} class="read-more">
                    View Case Study â†’
                  </a>
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="no-projects">
            <p>Projects coming soon...</p>
          </div>
        )
      }
    </div>
  </section>

  <ContactCTA />
</BaseLayout>

<style>
  .projects-section {
    padding: 4rem 2rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .intro {
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 3rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .project-card {
    border: 1px solid #eee;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .project-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .project-card-content {
    padding: 1.5rem;
  }

  .project-card-content h3 {
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .project-card-content h3 a {
    text-decoration: none;
    color: #333;
  }

  .project-card-content h3 a:hover {
    color: #0066cc;
  }

  .summary {
    color: #666;
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .pillars {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .pillar-tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: #f0f0f0;
    border-radius: 4px;
    font-size: 0.85rem;
    color: #555;
  }

  .read-more {
    display: inline-block;
    color: #0066cc;
    text-decoration: none;
    font-weight: 500;
  }

  .read-more:hover {
    text-decoration: underline;
  }

  .no-projects {
    text-align: center;
    padding: 3rem;
    color: #999;
  }
</style>
