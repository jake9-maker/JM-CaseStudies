---
// src/pages/index.astro - Homepage
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactCTA from '../components/ContactCTA.astro';
import { getCollection } from 'astro:content';

const baseUrl = import.meta.env.BASE_URL;

// Fetch featured projects and sort by featured_order
const allProjects = await getCollection('projects');
const projects = allProjects
  .filter(project => project.data.featured)
  .sort((a, b) => a.data.featured_order - b.data.featured_order);
---

<BaseLayout title="JM Case Studies - Product Design & Leadership">
  <section class="hero">
    <div class="hero-content">
      <h1>Product Designer & Leader</h1>
      <p class="tagline">
        I build strategic products that solve complex problems and drive measurable impact
      </p>
      <div class="hero-actions">
        <a href="/resume.pdf" target="_blank" rel="noopener noreferrer" class="hero-resume">View Resume</a>
      </div>
    </div>
  </section>

  <section class="featured-projects">
    <div class="container">
      <h2>Featured Work</h2>
      <p class="section-intro">
        Four projects showcasing problem framing, research, strategic thinking, and cross-functional leadership
      </p>

      <div class="projects-grid">
        {projects.map((project) => (
          <a href={`${baseUrl}projects/${project.slug}/`} class="project-card">
            <div class="project-header">
              <h3>{project.data.title}</h3>
              <p class="project-summary">{project.data.summary}</p>
            </div>
            <div class="project-role">
              <span class="role-label">Role:</span>
              <span class="role-text">{project.data.role}</span>
            </div>
            <div class="project-meta">
              <span class="meta-item">
                <strong>{project.data.team_size}</strong> person team
              </span>
              <span class="meta-item">
                <strong>{project.data.duration}</strong>
              </span>
            </div>
          </a>
        ))}
        <a href={`${baseUrl}projects/`} class="project-card view-all-card">
          <div class="view-all-content">
            <h3>View All Work</h3>
            <p>Explore all case studies and detailed project breakdowns</p>
            <span class="cta-arrow">â†’</span>
          </div>
        </a>
      </div>
    </div>
  </section>

  <ContactCTA />
</BaseLayout>

<style>
  .hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 6rem 2rem 7rem;
  }

  .hero-content {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 0;
  }

  .hero-content h1 {
    font-size: 3.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .tagline {
    font-size: 1.2rem;
    margin-bottom: 2.5rem;
    opacity: 0.95;
    max-width: 600px;
    line-height: 1.6;
    font-weight: 400;
  }

  .hero-cta {
    display: inline-block;
    padding: 0.75rem 1.75rem;
    background-color: white;
    color: #667eea;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    font-size: 0.95rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .hero-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }

  .hero-actions {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    align-items: center;
  }

  .hero-resume {
    display: inline-block;
    padding: 0.75rem 1.75rem;
    background-color: transparent;
    color: white;
    text-decoration: none;
    border: 2px solid white;
    border-radius: 9999px;
    font-weight: 600;
    font-size: 0.95rem;
    transition: transform 0.3s ease, background-color 0.3s ease;
  }

  .hero-resume:hover {
    background-color: white;
    color: #667eea;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .hero {
      padding: 4rem 2rem 5rem;
    }

    .hero-content h1 {
      font-size: 2.5rem;
    }

    .tagline {
      font-size: 1.1rem;
      margin-bottom: 2rem;
    }
  }

  .featured-projects {
    padding: 4rem 2rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .featured-projects h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .section-intro {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    margin-bottom: 3rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .project-card {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    background-color: #ffffff;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
  }

  .project-card:hover {
    border-color: var(--color-accent);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.1);
    transform: translateY(-2px);
  }

  .project-header {
    margin-bottom: 1.5rem;
  }

  .project-header h3 {
    font-size: 1.25rem;
    margin: 0 0 0.75rem 0;
    color: var(--color-text);
    line-height: 1.4;
  }

  .project-summary {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.5;
  }

  .project-role {
    display: flex;
    flex-direction: column;
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .role-label {
    font-weight: 600;
    color: var(--color-text);
    font-size: 0.85rem;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .role-text {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .project-meta {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: auto;
  }

  .meta-item {
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .meta-item strong {
    color: var(--color-text);
    font-weight: 600;
  }

  .view-all-card {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-bg-tertiary);
  }

  .view-all-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }

  .view-all-content h3 {
    font-size: 1.25rem;
    margin: 0;
    color: var(--color-text);
    font-weight: 600;
  }

  .view-all-content p {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.5;
  }

  .cta-arrow {
    font-size: 1.5rem;
    color: var(--color-accent);
    transition: transform 0.3s ease;
  }

  .view-all-card:hover .cta-arrow {
    transform: translateX(4px);
  }

  @media (max-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
