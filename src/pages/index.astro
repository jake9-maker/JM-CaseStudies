---
// src/pages/index.astro - Homepage
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactCTA from '../components/ContactCTA.astro';
import { getCollection } from 'astro:content';

const baseUrl = import.meta.env.BASE_URL;

// Fetch all projects and sort by featured_order
const allProjects = await getCollection('projects');
const projects = allProjects.sort((a, b) => a.data.featured_order - b.data.featured_order);
---

<BaseLayout title="JM Case Studies - Product Design & Leadership">
  <section class="hero">
    <div class="hero-content">
      <h1>Product Designer & Leader</h1>
      <p class="tagline">
        I build strategic products that solve complex problems and drive measurable impact
      </p>
      <a href={`${baseUrl}projects/`} class="hero-cta">Explore Case Studies</a>
    </div>
  </section>

  <section class="about">
    <div class="container">
      <h2>About</h2>
      <p class="about-text">
        Product Designer | Strategist | Research Lead
      </p>
      <div class="expertise">
        <div class="expertise-item">
          <span class="arrow">→</span>
          <span>Strategic product rationalization and portfolio auditing</span>
        </div>
        <div class="expertise-item">
          <span class="arrow">→</span>
          <span>Mobile-first design and platform expansion</span>
        </div>
        <div class="expertise-item">
          <span class="arrow">→</span>
          <span>AI integration and optimization (features + decision-making)</span>
        </div>
        <div class="expertise-item">
          <span class="arrow">→</span>
          <span>Research-led decision making under tight constraints</span>
        </div>
        <div class="expertise-item">
          <span class="arrow">→</span>
          <span>Cross-functional leadership across 8+ product lines</span>
        </div>
        <div class="expertise-item">
          <span class="arrow">→</span>
          <span>Digitization and process automation</span>
        </div>
      </div>
    </div>
  </section>

  <section class="featured-projects">
    <div class="container">
      <h2>Featured Work</h2>
      <p class="section-intro">
        Four projects showcasing problem framing, research, strategic thinking, and cross-functional leadership
      </p>

      <div class="projects-grid">
        {projects.map((project) => (
          <a href={`${baseUrl}projects/${project.slug}/`} class="project-card">
            <div class="project-header">
              <h3>{project.data.title}</h3>
              <p class="project-summary">{project.data.summary}</p>
            </div>
            <div class="project-role">
              <span class="role-label">Role:</span>
              <span class="role-text">{project.data.role}</span>
            </div>
            <div class="project-meta">
              <span class="meta-item">
                <strong>{project.data.team_size}</strong> person team
              </span>
              <span class="meta-item">
                <strong>{project.data.duration}</strong>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <ContactCTA />
</BaseLayout>

<style>
  .hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 6rem 2rem 7rem;
  }

  .hero-content {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 0;
  }

  .hero-content h1 {
    font-size: 3.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .tagline {
    font-size: 1.2rem;
    margin-bottom: 2.5rem;
    opacity: 0.95;
    max-width: 600px;
    line-height: 1.6;
    font-weight: 400;
  }

  .hero-cta {
    display: inline-block;
    padding: 0.75rem 1.75rem;
    background-color: white;
    color: #667eea;
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    font-size: 0.95rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .hero-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
  }

  @media (max-width: 768px) {
    .hero {
      padding: 4rem 2rem 5rem;
    }

    .hero-content h1 {
      font-size: 2.5rem;
    }

    .tagline {
      font-size: 1.1rem;
      margin-bottom: 2rem;
    }
  }

  .about {
    padding: 4rem 2rem;
    background-color: var(--color-bg-secondary);
  }

  .about h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }

  .about-text {
    font-size: 1.1rem;
    color: var(--color-text-muted);
    margin-bottom: 2rem;
    font-weight: 500;
  }

  .expertise {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .expertise-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    font-size: 1rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .arrow {
    color: var(--color-accent);
    font-weight: bold;
    flex-shrink: 0;
    margin-top: 0.2rem;
  }

  .featured-projects {
    padding: 4rem 2rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .featured-projects h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .section-intro {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    margin-bottom: 3rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .project-card {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    background-color: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
  }

  .project-card:hover {
    border-color: var(--color-accent);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.1);
    transform: translateY(-2px);
  }

  .project-header {
    margin-bottom: 1.5rem;
  }

  .project-header h3 {
    font-size: 1.25rem;
    margin: 0 0 0.75rem 0;
    color: var(--color-text);
    line-height: 1.4;
  }

  .project-summary {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.5;
  }

  .project-role {
    display: flex;
    flex-direction: column;
    margin-bottom: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .role-label {
    font-weight: 600;
    color: var(--color-text);
    font-size: 0.85rem;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .role-text {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .project-meta {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: auto;
  }

  .meta-item {
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .meta-item strong {
    color: var(--color-text);
    font-weight: 600;
  }
</style>
